{% extends 'base.html.twig' %}

{% block title %}Liste des Modules{% endblock %}

{% block body %}
    <div id="formationList">
        {% for module in modules %}
            <div>
                <div></div>
                <div>
                    <a href="{{ path('info_module', {'id': module.id}) }}">{{ module.name }}</a>
                </div>
            </div>
        {% endfor %}
    </div>
    <div id="addPage">
        {{ form_start(formAddModule) }}
    
            {{ form_row(formAddModule.name) }}
            {{ form_row(formAddModule.categorie) }}
            <div id="addCategorie"></div>

        {{ form_end(formAddModule) }}

        {{ form_start(formAddCategorie, {'attr' :{'id' : 'addCategorieForm'}}) }}
    
            {{ form_row(formAddCategorie.name) }}

        {{ form_end(formAddCategorie) }}
    </div>
{% endblock %}
